
@{
    ViewBag.Title = "AvailableMatches";
}

<h1>Available Matches</h1>

@model List<SoccerWebsite.Models.Match>


<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Host Club Name</th>
            <th scope="col">Guest Club Name</th>
            <th scope="col">Stadium Name</th>
            <th scope="col">Location</th>
            <th scope="col">Purchase</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Model)
        {
            <tr>
                <td>@match.hostName</td>
                <td>@match.guestName</td>
                <td>@match.stadiumName</td>
                <td>@match.location</td>


                <td>
                    <button class="btn btn-success">
                        @Html.ActionLink("PurchaseTicket", "PurchaseTicket", new { @hostName = match.hostName, @guestName = match.guestName, @start = match.starts })

                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>



